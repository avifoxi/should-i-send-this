<body class="inner">

<h2>Give Feedback</h2>
<hr>
<br>


<% @documents.each do |document| %>
  <div class="document-summary">

    <h3><%= link_to document.title, document_path(document) %></h3>
    <h4>by <%= link_to document.user.name, user_path(document.user) %></h4>
    <p><%= h truncate(document.versions.last.content, :length => 240) %></p>

  </div>
<% end %>

</body>
