<body class="inner">

<%= form_for @document do |f| %>
  <h2>New Document</h2>
  <h2><br>Title</h2>
  <%= f.text_field :title %><br>
  <br>
  <h2>Statement, or idea expressed here<br></h2>
  <%= f.text_area :context, class: 'textarea15' %><br>
  <br>

    <%= f.fields_for :versions do |v| %>
      <h2><%= v.label :content %><br></h2>
        <%= f.fields_for @version do |v| %>
          <%= v.text_area :content %><br>
        <% end %>
    <% end %>
    <br>

  <%= f.label :privacy, 'Check to make this message private:' %><br>
  <%= f.check_box :privacy, :checked => false %>


  <br><%= f.submit %>
<% end %>

</body>