<%= form_for @document do |f| %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :context %><br>
  <%= f.text_field :context %><br>

  <%= f.fields_for :versions do |v| %>
    <%= v.label :content %><br>
    <%= v.text_area :content %><br>
  <% end %>

  <%= f.submit %>
<% end %>
